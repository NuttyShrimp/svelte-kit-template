{
  "name": "svelte-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "biome check ./src/",
    "format:fix": "biome check --apply ./src/",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx drizzle/migrate.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@sveltejs/adapter-node": "^2.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "autoprefixer": "^10.4.14",
    "drizzle-kit": "^0.20.6",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@lucia-auth/adapter-postgresql": "^2.0.2",
    "@lucia-auth/oauth": "^3.5.0",
    "@tanstack/svelte-query": "^5.12.1",
    "@trpc/client": "^10.44.1",
    "@trpc/server": "^10.44.1",
    "@types/mjml": "^4.7.4",
    "bee-queue": "^1.7.1",
    "bits-ui": "^0.12.0",
    "clsx": "^2.0.0",
    "cmdk-sv": "^0.0.12",
    "devalue": "^4.3.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "form-data": "^4.0.0",
    "lucia": "^2.7.6",
    "mailgun.js": "^9.3.0",
    "mjml": "^4.14.1",
    "mode-watcher": "^0.1.2",
    "postgres": "^3.4.3",
    "radix-icons-svelte": "^1.2.1",
    "svelte-fa": "^3.0.4",
    "tailwind-merge": "^2.1.0",
    "tailwind-variants": "^0.1.19",
    "trpc-svelte-query": "^2.0.5",
    "tsx": "^4.6.2",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,svelte}": [
      "biome check --apply --log-level=debug"
    ]
  }
}
